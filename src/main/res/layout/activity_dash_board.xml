<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorWhite"
    tools:openDrawer="start">
    <LinearLayout
        android:id="@+id/holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/app_bar_dash_board"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_dash_board"
        >


        <LinearLayout
            android:layout_marginTop="150dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                android:id="@+id/nav_home"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="6dp"
                        android:layout_gravity="center"
                        android:src="@drawable/housenavicon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="Home"
                        android:textColor="#2D2E2E"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:orientation="horizontal"
                android:id="@+id/nav_account"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="6dp"
                        android:layout_gravity="center"
                        android:src="@drawable/myaccount"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="Account"
                        android:textColor="#2D2E2E"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:id="@+id/nav_loan"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:padding="6dp"
                        android:src="@drawable/loangeticon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="Loan Products"
                        android:textColor="#2D2E2E"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:id="@+id/nav_track"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="6dp"
                        android:layout_gravity="center"
                        android:src="@drawable/tracklocationicon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="Track"
                        android:textColor="#2D2E2E"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:id="@+id/nav_feedback"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="6dp"
                        android:layout_gravity="center"
                        android:src="@drawable/feedbackicon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="FeedBack"
                        android:textColor="#2D2E2E"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:id="@+id/nav_support"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="6dp"
                        android:layout_gravity="center"
                        android:src="@drawable/supportnavicon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="Support"
                        android:textColor="#2D2E2E"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:id="@+id/nav_notification"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:padding="6dp"
                        android:src="@drawable/notificationheadericon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="Notification"
                        android:textColor="#2D2E2E"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:id="@+id/nav_logout"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:padding="6dp"
                        android:src="@drawable/logouticon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="Logout"
                        android:textColor="#2D2E2E"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </com.google.android.material.navigation.NavigationView>



</androidx.drawerlayout.widget.DrawerLayout>
