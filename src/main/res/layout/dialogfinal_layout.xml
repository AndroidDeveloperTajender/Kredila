<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/dialogamount_bg"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="@color/colorBlack"
        android:text="Congratulations"
        android:layout_marginStart="30dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="90dp"
        android:layout_marginStart="40dp"
        android:textSize="16sp"
        android:id="@+id/usernamefinal_db"
        android:text="Dear"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"

        android:text="Thanks for loan \n Request application no :"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:id="@+id/dialogapno_tv"
        android:text="324"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="we are requesting that kindly wait for at least 5 working days for the process you can check the status from track my application" android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:paddingEnd="60dp"
        android:layout_marginStart="40dp"
        android:paddingStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="start"
        android:id="@+id/dialogfinish_btn"
        android:text="Finish"
        android:textColor="@color/colorWhite"
        android:background="@drawable/butttonbg"
        android:layout_height="wrap_content"/>
</LinearLayout>