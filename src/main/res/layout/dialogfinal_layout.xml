<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:textSize="20sp"
        android:id="@+id/usernamefinal_db"
        android:text="Dear"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorBlack"
        android:text="Congratulations"
        android:layout_marginStart="30dp"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"

        android:text="Thanks for Submitting your leads Requests.\nPlease Complete Your Next Step and get Your Lead Now:"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:id="@+id/dialogapno_tv"
        android:text="Thanks"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:textAlignment="textEnd"
        android:textStyle="bold"
        android:paddingEnd="20dp"
        android:layout_height="wrap_content"/>


    <Button
        android:layout_width="wrap_content"
        android:paddingEnd="60dp"
        android:layout_marginStart="40dp"
        android:paddingStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="start"
        android:id="@+id/dialogfinish_btn"
        android:text="Finish"
        android:textColor="@color/colorWhite"
        android:background="@drawable/butttonbg"
        android:layout_height="wrap_content"/>
</LinearLayout>