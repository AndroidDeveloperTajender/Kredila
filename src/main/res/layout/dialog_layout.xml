<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_threebg"
    android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="100dp"
            android:paddingStart="30dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="23sp"
            android:text="Dear User"
            android:id="@+id/dialognameuser_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:paddingStart="30dp"
        android:layout_marginEnd="30dp"
        android:textStyle="normal"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:text="Your Loan Aggrements/Stamp Papers &amp; Sign Verification Aggrements Will Generate After Stamp Papers Fees(Stamp Papers and Stamp duty fees Is Only paid By Applicants When is 499rs For Stamps Papers) \n EverGrow Has (0% Application. 0% Process Fee. 0% Brokerage Fees). 499rs Is 100% Refundable.With your Loan Instantly So don't Worry About your Loan and Fee."
        android:id="@+id/dialogdescription_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Apply &amp; Get Loan"
        android:layout_width="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:id="@+id/btn_apply"
        android:layout_gravity="end"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:background="@drawable/butttonbg"
        android:layout_height="40dp"/>

    </LinearLayout>