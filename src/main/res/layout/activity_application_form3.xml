<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/evergrow_bg"
    tools:context=".ApplicationForm.ApplicationForm3Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/fblogo"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:layout_height="70dp"/>
        <TextView
            android:textAlignment="center"
            android:textSize="26sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/stepthree"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="6dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:padding="6dp"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:text="Market Value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:orientation="horizontal"
                       android:layout_height="wrap_content">

                       <RadioButton
                           android:id="@+id/mv_one"
                           android:text="10l-20l"
                           android:layout_margin="2dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>
                       <RadioButton
                           android:layout_margin="2dp"
                           android:id="@+id/mv_two"
                           android:text="20l-30l"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>
                       <RadioButton
                           android:layout_margin="2dp"
                           android:id="@+id/mv_three"
                           android:text="30l-40l"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>
                       <RadioButton
                           android:layout_margin="2dp"
                           android:id="@+id/mv_four"
                           android:text="40l-60l"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>
                   </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/mv_five"
                            android:text="60l-80l"
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:layout_margin="2dp"
                            android:id="@+id/mv_six"
                            android:text="80l-1cr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:layout_margin="2dp"
                            android:id="@+id/mv_seven"
                            android:text="1cr-2cr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:layout_margin="2dp"
                            android:id="@+id/mv_earth"
                            android:text="2cr-5cr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="30dp"
                    android:textSize="18sp"
                    android:padding="6dp"
                    android:text="Measorement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/measorment_one_"
                            android:text="25Gaj-50Gaj"
                            android:layout_margin="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:layout_margin="5dp"
                            android:id="@+id/measorment_two"
                            android:text="50Gaj-100Gaj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_margin="5dp"
                            android:id="@+id/measorment_three"
                            android:text="100Gaj-200Gaj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:layout_margin="5dp"
                            android:id="@+id/measorment_four"
                            android:text="200Gaj + Any"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>


                <Button
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="40dp"
                    android:id="@+id/nextthree_btn"
                    android:layout_marginEnd="40dp"
                    android:textColor="@color/colorWhite"
                    android:text="Next"
                    android:background="@drawable/butttonbg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>





        </androidx.cardview.widget.CardView>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>