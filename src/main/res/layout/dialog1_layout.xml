<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialogamount_bg"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="@color/colorBlack"
        android:text="Congratulations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp"
        android:textSize="16sp"
        android:id="@+id/username_db"
        android:text="Dear"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"

        android:text="You are eligible to apply loan of"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:id="@+id/lamount_duration_tv"
        android:text="You are eligible to apply loan of"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="40dp"
        android:textSize="16sp"

        android:text="Kindly Verify your Bank Account to get laon"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="end"
        android:id="@+id/dilgobtn"
        android:text="Next"
        android:textColor="@color/colorWhite"
        android:background="@drawable/butttonbg"
        android:layout_height="wrap_content"/>

</LinearLayout>
</LinearLayout>