<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fintapbg"
    tools:context=".TrackedActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/fblogo"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:layout_height="70dp"/>
        <TextView
            android:textAlignment="center"
            android:textSize="26sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:text="EverGrow"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.baoyachi.stepview.VerticalStepView
            android:id="@+id/step_view0"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

    </LinearLayout>

</RelativeLayout>